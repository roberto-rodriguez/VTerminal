<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tx_grid_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:columnCount="2"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintTop_toBottomOf="@+id/tx_fees_layout"
    app:layout_constraintVertical_bias="0.08"
    tools:context=".views.tx.TxActivity"
    tools:showIn="@layout/activity_tx">

    <LinearLayout
        android:id="@+id/tx_check_front_wrapper"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:onClick="onClickCheckFront"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"

            android:text="Check Front" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="fill_horizontal"

            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">

            <com.kofax.kmc.kui.uicontrols.ImgReviewEditCntrl
                android:id="@+id/tx_check_front_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorGrey"
                android:gravity="center"
                android:scaleType="centerInside"
                android:visibility="visible" />


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/tx_check_back_wrapper"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:onClick="onClickCheckBack"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"

            android:text="Check Back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="fill_horizontal"
            android:orientation="vertical"

            android:padding="@dimen/activity_horizontal_margin">

            <com.kofax.kmc.kui.uicontrols.ImgReviewEditCntrl
                android:id="@+id/tx_check_back_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorGrey"
                android:gravity="center"
                android:scaleType="centerInside"
                android:visibility="visible" />


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/tx_id_front_wrapper"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:onClick="onClickIdFront"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"

            android:text="ID Front" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="fill_horizontal"

            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">

            <com.kofax.kmc.kui.uicontrols.ImgReviewEditCntrl
                android:id="@+id/tx_id_front_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorGrey"
                android:gravity="center"
                android:scaleType="centerInside"
                android:visibility="visible" />


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/tx_id_back_wrapper"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:onClick="onClickIdBack"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"

            android:text="ID Barcode" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="fill_horizontal"
            android:orientation="vertical"

            android:padding="@dimen/activity_horizontal_margin">

            <com.kofax.kmc.kui.uicontrols.ImgReviewEditCntrl
                android:id="@+id/tx_id_back_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorGrey"
                android:gravity="center"
                android:scaleType="centerInside"
                android:visibility="visible" />


        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/tx_id_ssn_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:hint="SSN"
        android:text="900700001"
        android:inputType="phone"
        android:visibility="gone" />

    <EditText
        android:id="@+id/tx_id_phone_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:hint="Phone"
        android:text="7864540209"
        android:inputType="textPersonName|phone"
        android:visibility="gone" />

    <Switch
        android:id="@+id/cash_back_checkbox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:thumbTint="@color/VOLTCASH_GREEN"
        android:trackTint="@color/colorPrimaryDark"
        android:text="Get Cash Back"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/cash_back_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:hint="Amount"
        android:inputType="phone"
        android:visibility="invisible"/>
</GridLayout>
